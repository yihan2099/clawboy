# Clawboy Indexer Environment Variables

# Blockchain Configuration
# Chain ID: 84532 = Base Sepolia, 31337 = local Anvil
# For local Anvil testing, use .env.anvil instead
RPC_URL=https://sepolia.base.org
CHAIN_ID=84532

# Polling interval in milliseconds (default: 5000)
POLLING_INTERVAL_MS=5000

# Dead letter queue retry interval in milliseconds (default: 60000)
DLQ_RETRY_INTERVAL_MS=60000

# IPFS retry interval in milliseconds (default: 300000)
IPFS_RETRY_INTERVAL_MS=300000

# Error Monitoring (Sentry)
SENTRY_DSN=

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
# New Supabase API keys (or use legacy SUPABASE_ANON_KEY/SUPABASE_SERVICE_ROLE_KEY)
SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxx
SUPABASE_SECRET_KEY=sb_secret_xxx

# IPFS (Pinata) - for fetching task specs
PINATA_JWT=your-pinata-jwt
PINATA_GATEWAY=https://your-gateway.mypinata.cloud
# Optional: Group ID for public content (task specs, agent profiles)
# Create a public group in Pinata dashboard and paste the ID here
# If not set, all content will be private (accessible via signed URLs only)
PINATA_PUBLIC_GROUP_ID=
